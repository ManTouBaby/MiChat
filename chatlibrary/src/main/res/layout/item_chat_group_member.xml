    <com.hy.chatlibrary.widget.CornerTextView
        android:id="@+id/mi_tag_por"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:auto_background="true"
        android:textColor="@color/mi_text_gray"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        app:radius="4dp"/>

    <TextView
        android:id="@+id/mi_member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mi_tag_por"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="名称"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/member_select_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/mi_tag_por"
        android:visibility="gone"
        android:src="@mipmap/icon_select" />
