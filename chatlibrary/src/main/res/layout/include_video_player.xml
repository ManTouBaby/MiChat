<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.hy.chatlibrary.widget.SmartImageView
        android:id="@+id/mi_item_video_bg"
        android:layout_width="@dimen/image_default_width"
        android:layout_height="@dimen/image_default_height"
        android:src="@mipmap/bms"
        app:smart_radius="4dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_video_player_tag" />

    <TextView
        android:id="@+id/mi_item_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/mi_item_video_bg"
        android:layout_alignBottom="@+id/mi_item_video_bg"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="0:15"
        android:textColor="@color/mi_text_white" />
</RelativeLayout>