<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_instruct_item_select_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/ll_instruct_model_item_edit"
        android:text="标题"
        android:textColor="#333"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/ll_instruct_model_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:visibility="visible">

        <Button
            android:id="@+id/mi_instruct_model_item_delete"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/icon_instruct_model_item_delect_bg"
            android:gravity="center"
            android:text="删除"
            android:textColor="#FFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/mi_instruct_model_item_edit"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_instruct_model_item_edit_bg"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#FFF"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/mi_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mi_title"
        android:layout_alignLeft="@+id/mi_title"
        android:layout_marginTop="4dp"
        android:text="全部" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mi_content"
        android:layout_marginTop="12dp"
        android:background="@color/mi_gray_bg" />
</RelativeLayout>