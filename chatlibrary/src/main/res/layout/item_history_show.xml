<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mi_white_bg"
    android:orientation="vertical"
    android:paddingLeft="16dp">

    <com.hy.chatlibrary.widget.CornerTextView
        android:id="@+id/mi_holder_pro"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="ss"
        android:textSize="17sp"
        app:auto_background="true"
        app:radius="4dp" />


    <LinearLayout
        android:id="@+id/mi_content_container"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@+id/mi_holder_pro"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mi_holder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称"
                android:textColor="@color/mi_text_black"
                android:textSize="18sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/mi_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5月14日"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mi_message_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lines="1"
            android:text="内容"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mi_content_container"
        android:layout_alignLeft="@+id/mi_content_container"
        android:background="@color/mi_gray_bg" />

</RelativeLayout>