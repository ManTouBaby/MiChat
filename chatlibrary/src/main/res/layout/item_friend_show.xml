<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mi_white_bg"
    android:orientation="vertical">

    <com.hy.chatlibrary.widget.CornerTextView
        android:id="@+id/mi_holder_pro"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/mi_text_white"
        app:auto_background="true"
        app:radius="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mi_holder_pro"
        android:layout_alignBottom="@+id/mi_holder_pro"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/mi_holder_pro"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mi_holder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text=""
            android:textColor="@color/mi_text_black"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/mi_holder_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:textSize="12sp"
            android:text=""
            android:layout_marginTop="3dp"
            android:textColor="@color/mi_text_deep_gray" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mi_holder_pro"
        android:layout_toRightOf="@+id/mi_holder_pro"
        android:background="@color/mi_deep_gray_bg" />
</RelativeLayout>